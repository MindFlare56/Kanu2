
@{
    ViewBag.Title = "Video";
}

@section Styles {
    <link rel="Stylesheet" href="@Href("~/Content/Stylesheets/player.css")" />    
}

<h2>Video</h2>
<div>
    <div class="player" style="width: 720px; height: 405px;">        
        <div class="controls">
            <div class="row">
                <span class="overlay">Overlay text</span>
                <span class="hover play"><i class="fas fa-play tint-blue"></i></span>
                <span class="hover pause"><i class="fas fa-pause tint-blue"></i></span>
                <div class="timeline">
                    <div class="timeline__drag"></div>
                    <div class="timeline__progress"></div>
                </div>               
            </div>            
        </div>        
        <video class="video-background video1" no-controls src='~/Content/Videos/killcomp.mp4' poster="~/Content/Images/player2.png">
            <p>
                To view this video please enable JavaScript, and consider upgrading to a
                web browser that
                <a href="https://videojs.com/html5-video-support/" target="_blank">
                    supports HTML5 video
                </a>
            </p>
        </video>
    </div>
</div>  

@section Scripts {
    <script type="text/javascript" src="@Url.Content("~/Scripts/player.js")"></script>
}