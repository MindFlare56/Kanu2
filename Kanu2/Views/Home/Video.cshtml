
@{
    ViewBag.Title = "Video";
}

<h2>Video</h2>
<div id='player_wrapper'>   
    <video id="my-player" width="600" height="300"
           class="video-js"
           controls
           preload="auto"           
           poster="~/Content/Images/player2.png"
           data-setup='{}'>
        <source src='~/Content/Videos/killcomp.mp4' type='video/mp4'>
        <p class="vjs-no-js">
            To view this video please enable JavaScript, and consider upgrading to a
            web browser that
            <a href="https://videojs.com/html5-video-support/" target="_blank">
                supports HTML5 video
            </a>
        </p>
    </video>   
</div>

